<%- layout('layouts/boilerplate') %>
    <div class="container">
        <div class="form-container">
            <a class="return" href="/posts">&#8592; Go Back</a>
            <h1>Make a new post</h1>
            <form class="form needs-validation" action="/posts" method="POST" enctype="multipart/form-data" novalidate>
                <div class="form-child">
                    <label for="post-body">Body: </label>
                    <textarea name="post[body]" id="post-body" class="resource-body" cols="50" rows="5"
                        placeholder="Quack are you thinking about?" maxlength="2048" autocomplete="off" required
                        autofocus></textarea>
                </div>
                <div class="form-child">
                    <label for="image">Image(s):</label>
                    <input type="file" name="image" id="image" multiple>
                </div>
                <button class="btn">Submit</button>
            </form>
        </div>
    </div>